<div class="container">
  <h2><%= @cocktail.name %></h2>
  <%if @cocktail.photo.attached?%>
    <%= cl_image_tag @cocktail.photo.key, class: "image-bg" %>
  <% else %>
    <%= cl_image_tag "https://res.cloudinary.com/tom-horan/image/upload/v1608383833/l7lcs5zp318e5q63zl8ncl4kj6bf.jpg" %>
  <%end%>

  <% @cocktail.doses.each do |dose| %>
    <div class="dose-list">
      <%= dose.description %>-<%= dose.ingredient.name%>
      <%= link_to "Remove", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>`
    </div>
  <% end %>

  <h3><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %><h3>

  <h3><%= link_to "Return to home", root_path %><h3>

</div>

