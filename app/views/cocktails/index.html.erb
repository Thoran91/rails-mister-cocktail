<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
    <%if cocktail.photo.attached?%>
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill%>
    <%end%>
  <% end %>
</ul>

<h3><%= link_to "Add a new cocktail", new_cocktail_path %><h3>